<div class="container">

    
    <br>
    <br>
    
    <h3>Account Settings</h3>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <h4>Contact Details</h4>
            <form action="/user/profileUpdate" method="POST" required>
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" class="form-control"  name="firstName" value="<%= user.firstName %>" >
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <input type="text" class="form-control"  name="lastName" value="<%= user.lastName %>" >
                </div>
                <div class="form-group">
                    <label>Address Line 1</label>
                    <input type="text" class="form-control"  name="address1st" value="<%= user.address1st %>" >
                </div>
                <div class="form-group">
                    <label>Address Line 2</label>
                    <input type="text" class="form-control"  name="address2nd" value="<%= user.address2nd %>" >
                </div>
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" class="form-control"  name="email" value="<%= user.email %>" >
                </div>
                <div class="form-group">
                    <label>Mobile</label>
                    <input type="tel" class="form-control"   name="mobile" value="<%= user.mobile %>">
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Update Details</button>
            </form>
        </div>
        <div class="col-md-6">
            <h4>Password Reset</h4>
            <form action="/user/passwordUpdate" method="POST" required>
                <div class="form-group">
                    <label>Old Password</label>
                    <input type="password" class="form-control"  name="oldPassword" placeholder="Enter Old Password">
                </div>
                <div class="form-group">
                    <label>New Password</label>
                    <input type="password" class="form-control"  name="newPassword" placeholder="Enter New Password">
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control"   name="confirmPassword" placeholder="Re-Enter New Password">
                </div>
                <br>
                <button type="submit" class="btn btn-primary">Update Password</button>
            </form>
        </div>
    </div>
    <hr>




</div>
