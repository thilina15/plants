
<!-- ##### Shop Area Start ##### -->
<section class="shop-page section-padding-0-100">
    <div class="container">
        <div class="row">
            <!-- All Products Area -->
            
            <div>
                <div class="shop-products-area">
                    <div class="row">

                        <!-- Single Product Area -->
                        <% products.forEach(product=>{ %>
                            
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="single-product-area mb-50">
                                    <!-- Product Image -->
                                    <div class="product-img">
                                        <img src="<%= product.imagPaths[0] %>">"
                                        <!-- Product Tag -->
                                        <div class="product-tag">
                                            <a href="#"><%=product.category%></a>
                                        </div>
                                    </div>
                                    <!-- Product Info -->
                                    <div class="product-info mt-15 text-center">
                                        <h3><%=product.name%></h3>
                                        <h6>RS: <%=product.price%>.00/=</h6>
                                        <form action="/admin/gallery/<%= product.id %>" method="GET">
                                            <button type="submit" class="btn btn-outline-warning">Edit Product</button>
                                        </form>
                                        <form action="/admin/removeproduct/<%= product.id %>" method="GET">
                                            <button type="submit" class="btn btn-outline-danger">Delete Product</button>
                                        </form>

                                    </div>
                                </div>
                            </div>

                        <% }) %> 
                        
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Shop Area End ##### -->