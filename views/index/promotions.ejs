




<!-- ##### Shop Area Start ##### -->
<section class="shop-page section-padding-0-100">
    <div class="container">
        
       

        <div class="row">
            <br><hr>
            <!-- All Products Area -->
            
            <div>
                <div class="shop-products-area">
                    <div class="row">

                        <!-- Single Product Area -->
                        <% products.forEach(product=>{ %>
                            
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="single-product-area mb-50">
                                    <!-- Product Image -->
                                    <div class="product-img">
                                        <img src="<%= product.imagPaths[0] %>" alt="">
                                        <!-- Product Tag -->
                                        <div class="product-tag">
                                            <a href="#"><%=product.category%> <b>PROMOTION</b></a>
                                        </div>
                                    </div>
                                    <!-- Product Info -->
                                    <div class="product-info mt-15 text-center">
                                        <a href="/gallery/<%= product.id %>">
                                            <p><%=product.name%></p>
                                        </a>
                                        <h6><del>Rs: <%=product.oldPrice%>.00/=</del></h6>
                                        <h6><small>New Promotion Price</small>  Rs: <%=product.price%>.00/=</h6>
                                    </div>
                                </div>
                            </div>

                        <% }) %> 

                        
   
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Shop Area End ##### -->